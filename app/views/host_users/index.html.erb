<h1>Listing host_users</h1>

<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Old visit</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @host_users.each do |host_user| %>
      <tr>
        <td><%= host_user.activity %></td>
        <td><%= host_user.old_visit %></td>
        <td><%= link_to 'Show', host_user %></td>
        <td><%= link_to 'Edit', edit_host_user_path(host_user) %></td>
        <td><%= link_to 'Destroy', host_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

